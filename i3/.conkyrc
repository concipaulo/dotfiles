${voffset -44}${font agave Nerd Font:size=23}${execpi 1800 DA=`date +%_d`; cal | sed s/"\(^\|[^0-9]\)$DA"'\b'/'\1${font agave Nerd Font:weight=bold:size=23}'"$DA"'${font agave Nerd Font:size=23}'/}
${alignr}${font agave Nerd Font:size=16}${execpi 1800 curl wttr.in/Tangará?format="%l\n"}
${alignr}${font agave Nerd Font:size=16}${execpi 300 curl wttr.in/Tangará?format="%C+%t++%f\n"}
${alignr}${font agave Nerd Font:size=16}${execpi 300 curl wttr.in/Tangará?format="++%w+++%P\n"}
${alignr}${font agave Nerd Font:size=16}${execpi 300 curl wttr.in/Tangará?format="懲+%h++爫+%p\n"}
]]
