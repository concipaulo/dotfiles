# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!
#
set $mod Mod4
#
#config i3-gaps
hide_edge_borders both
for_window [class="^.*"] border pixel 0
gaps inner 15
gaps outer 15
#
#font pango:monospace 8
font pango:Inconsolata 9
#
#configuring
set $term urxvt
set $browser firefox-esr
#exec --no-startup-id xcompmgr
exec --no-startup-id nm-applet
exec --no-startup-id sudo redshift
exec_always --no-startup-id feh --bg-scale ~/.config/i3/wall.png
#
# Keybindings
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec --no-startup-id "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# start a terminal
bindsym $mod+Return exec urxvt 
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+Shift+Escape exec sudo reboot
bindsym $mod+Tab workspace back_and_forth


# kill focused window
bindsym $mod+Shift+q kill 
bindsym $mod+q kill

bindsym $mod+w exec --no-startup-id qutebrowser --backend webengine
bindsym $mod+Shift+w exec --no-startup-id $browser


bindsym $mod+e exec --no-startup-id $term -e mutt
#bindsym $mod+Shift+e 

bindsym $mod+r exec $term -e ranger
bindsym $mod+Shift+r restart

bindsym $mod+t split toggle
bindsym $mod+Shift+t gaps inner all set 15; gaps outer all set 15

#bindsym $mod+y 
bindsym $mod+Shift+y resize shrink width 5 px or 5 ppt

#bindsym $mod+u 
bindsym $mod+Shift+u resize shrink height 5 px or 5 ppt

bindsym $mod+i exec $term -e htop
bindsym $mod+Shift+i resize grow height 5 px or 5 ppt

#bindsym $mod+o 
bindsym $mod+Shift+o resize grow width 5 px or 5 ppt

#bindsym $mod+p
#bindsym $mod+Shift+p

bindsym $mod+a gaps inner current plus 5
bindsym $mod+Shift+a gaps inner current minus 5

bindsym $mod+s exec --no-startup-id spotify
#bindsym $mod+Shift+s 

bindsym $mod+d exec "rofi -combi-modi window,drun,run -show combi"
bindsym $mod+Shift+d gaps inner all set 0; gaps outer all set 0

bindsym $mod+f fullscreen toggle
#bindsym $mod+Shift+f

bindsym $mod+g exec --no-startup-id gimp; workspace $ws5
bindsym $mod+Shift+g exec --no-startup-id tecplot; workspace $ws6

bindsym $mod+h focus left
bindsym $mod+Shift+h move left 30

bindsym $mod+j focus down
bindsym $mod+Shift+j move down 30

bindsym $mod+k focus up
bindsym $mod+Shift+k move up 30

bindsym $mod+l focus right
bindsym $mod+Shift+l move right 30

bindsym $mod+z gaps outer current plus 5
bindsym $mod+Shift+z gaps outer current minus 5

bindsym $mod+x exec ~/.config/i3/lock.sh 
bindsym $mod+Shift+x exec sudo shutdown now 

bindsym $mod+c split toggle
bindsym $mod+Shift+c exec --no-startup-id $term -e calcurse

bindsym $mod+v exec --no-startup-id $term -e  ~/.cava/cava/cava 
bindsym $mod+Shift+v exec --no-startup-id thunar 

#bindsym $mod+b 
#bindsym $mod+Shift+b

#bindsym $mod+n 
#bindsym $mod+Shift+n

bindsym $mod+m exec --no-startup-id $term -e cmatrix
#bindsym $mod+Shift+m

bindsym F1 exec --no-startup-id echo "help" > /dev/null
bindsym F11 fullscreen toggle

bindsym $mod+F5 exec sudo systemctl restart NetworkManager
bindsym $mod+F9 exec --no-startup-id sudo bash ~/.config/i3/mount.sh
bindsym $mod+F10 exec --no-startup-id sudo bash ~/.config/i3/unmount.sh

#bindsym XF86MonBrightnessDown
#bindsym XF86MonBrightnessUP
bindsym XF86AudioMute exec --no-startup-id amixer -q sset 'Master' toggle
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q sset 'Master' 5%+ unmute
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q sset 'Master' 5%- unmute
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# change container layout (stacked, tabbed, toggle split)
#bindsym $mod+s layout stacking
#bindsym $mod+w layout tabbed
#bindsym $mod+e layout toggle split

# focus the parent container
#bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child
# Workspaces
# switch to workspace
set $ws1 "1 "
set $ws2 "2 "
set $ws3 "3 "
set $ws4 "4 "
set $ws5 "5 "
set $ws6 "6 "
set $ws7 "7 "
set $ws8 "8 "
set $ws9 "9 "
set $ws10 "10 "

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

#for_window [title="ranger"] move workspace $ws1
for_window [class="Firefox-esr"] move workspace $ws2
for_window [class="qutebrowser"] move workspace $ws2
for_window [class="Spotify"] move workspace $ws10
for_window [title="GIMP Startup"] move workspace $ws5
for_window [window_role="gimp-dock"] floating disable; move left; resize  shrink width 50 px or 50ppt
for_window [window_role="gimp-toolbox"] floating disable; move right; resize grow width 30 px or 30ppt
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
       # status_command i3status
        position top
        height 15
        font pango:Inconsolata for Powerline, FontAwesome 9
        #tray_output none
        status_command ~/.config/i3/bumblebee-status/bumblebee-status -m spotify amixer disk:home load memory date time -p interval=1 time.format="%H:%M:%S" date.format="%a, %b %d %Y" home.path=/home -t solarized-powerline

}

# Startup 
exec_always --no-startup-id xrandr --output LVDS-1 --primary --mode 1360x768 --pos 0x0 --rotate normal --output DP-1 --off --output HDMI-1 --off --output VGA-1 --off
exec_always --no-startup-id xset -b 
exec_always --no-startup-id xset -dpms
exec_always --no-startup-id compton -f
exec --no-startup-id amixer -q sset Master 0%
