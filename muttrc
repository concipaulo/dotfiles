source "gpg -dq $HOME/.mutt/.my_psswd.gpg |"

set realname    = "Paulo Conci"
set folder      = "imaps://imap.gmail.com/"
set imap_user   = "pauloagconci@gmail.com"
set imap_pass   =$my_pass
set spoolfile   = +INBOX
mailboxes       = +INBOX

set imap_keepalive  = 300
set mail_check      = 20
unset imap_passive
set postponed       = +[Gmail]/Drafts
unset record
set editor          = vim 

set smtp_url        = "smtps://pauloagconci@smtp.gmail.com:465/"
set smtp_pass       = $my_pass
set charset         = "utf-8"

set ssl_starttls    = yes
set ssl_force_tls   = yes

set status_format = "$from -%r-Mutt: %f [Msgs:%?M?%M/?%m%?n? New:%n?%?o? Old:%o?%?d? Del:%d?%?F? Flag:%F?%?t? Tag:%t?%?p? Post:%p?%?b? Inc:%b?%?l? %l?]---(%s/%S)-%>-(%P)---"

set sort            = "reverse-date"
set date_format     = "%m/%d %I:%M"
set index_format    = "%2C %Z %d %-15.15F %s (%-4.4c)"


bind index gg first-entry
bind index G last-entry
bind index D delete-message
bind index U undelete-message
bind index F search

mono bold bold
mono underline underline
mono indicator reverse
color status brightblue default 
color index yellow default '.*'
color index_author red default '.*'
color index_number blue default
color index_subject cyan default '.*'
color index_size green default
color normal default default
color hdrdefault cyan default
color body brightred default [\-\.+_a-zA-Z0-9]+@[\-\.a-zA-Z0-9]+
color body brightblue default (http|ftp)://[\-\.\,/%~_:?\#a-zA-Z0-9]+

set crypt_use_gpgme=no
